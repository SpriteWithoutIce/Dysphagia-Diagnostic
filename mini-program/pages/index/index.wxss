/**index.wxss**/
page {
  height: 1800rpx;
  display: flex;
  flex-direction: column;
  background-color: #d3ebd8;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
  display: flex; /* 使用flex布局 */
  flex-direction: column; /* 子元素沿着垂直方向排列 */
}
.left_boxes{
  display: flex; /* 使用flex布局 */
  flex-direction: column; /* 子元素沿着垂直方向排列 */
  align-items: center; /* 子元素在交叉轴上居中对齐 */
  justify-content: center; /* 子元素在主轴上居中对齐 */
  height: 500rpx; /* 可以根据需要设置高度 */
}
.bottom_boxes {
  display: flex; /* 使用flex布局 */
  align-items: center; /* 子元素在交叉轴上居中对齐 */
  justify-content: space-between; /* 子元素在主轴上两端对齐，平均分布 */
  height: 400rpx; /* 可以根据需要设置高度 */
}
.top-right-image {
  width: 320rpx;
  height: 320rpx;
  position: absolute;
  top: 130rpx; /* 距离页面顶部的距离 */
  right: 30rpx; /* 距离页面右侧的距离 */
}
.header {
  color: #473b3b; /* 白色字体 */
  text-align: center; /* 文本居中 */
  font-size: 24px; /* 字体大小14px */
  font-weight: bold; /* 字体加粗 */
  position: relative; /* 需要相对定位来使用top属性 */
  margin-top: 40rpx;
  font-weight: bold;
  font-family: 'Arial', sans-serif;
  display: flex;
  align-items: center;
  margin-left: 50px;
}

